<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="statistics">
  <div class="row">
    <div class="col-md-6">
      <canvas id="assignmentsChart"></canvas>
    </div>
    <div class="col-md-6">
      <canvas id="revenueChart"></canvas>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Accepted Assignments</div>
        <div class="panel-body">

          <table class="table table-striped">
            <thead>
              <tr>
                <th>Tutor Name</th>
                <th>Module</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              <% assignments.filter((assignment) => assignment.status === 1).forEach((assignment) => { %>
                <!-- Your code for rendering the assignment here -->
              <tr>
                <td><%= assignment.name %></td>
                <td><%= assignment.module %></td>
                <td><%= assignment.price %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Declined Assignments</div>
        <div class="panel-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Tutor Name</th>
                <th>Module</th>
                <th>Price</th>
                <th>Reason</th>
              </tr>
            </thead>
            <tbody>
               <% assignments.filter((assignment) => assignment.status === 0).forEach((assignment) => { %>
              <tr>
                <td><%= assignment.name %></td>
                <td><%= assignment.module %></td>
                <td>R200</td>
                <td><%= assignment.reason %></td>
              </tr>
               <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Accepted Tutorials</div>
        <div class="panel-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Tutor Name</th>
                <th>Module</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.filter((booking) => booking.status === 1).forEach((booking) => { %>
              <tr>
                <td><%= booking.name %></td>
                <td><%= booking.Module %></td>
                <td>R200</td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Declined Tutorials</div>
        <div class="panel-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Tutor Name</th>
                <th>Module</th>
                <th>Price</th>
                <th>Reason</th>
              </tr>
            </thead>
            <tbody>
              <% bookings.filter((booking) => booking.status === 2).forEach((booking) => { %>
              <tr>
                 <td><%= booking.name %></td>
                 <td><%= booking.Module %></td>
                <td>R200</td>
                 <td><%= booking.reason %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  // Assignments Chart
  var assignmentsCtx = document
    .getElementById("assignmentsChart")
    .getContext("2d");
  new Chart(assignmentsCtx, {
    type: "bar",
    data: {
      labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
      datasets: [
        {
          label: "Total Assignments",
          data: [15, 20, 18, 6, 22, 19],
          backgroundColor: "#0e1a35",
        },
      ],
    },
    options: {
      scales: {
        y: {
          beginAtZero: true,
        },
      },
    },
  });

  // Revenue Chart
  var revenueCtx = document.getElementById("revenueChart").getContext("2d");
  new Chart(revenueCtx, {
    type: "line",
    data: {
      labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
      datasets: [
        {
          label: "Revenue",
          data: [500, 600, 550, 700, 650, 600],
          borderColor: "#0e1a35",
          fill: false,
        },
      ],
    },
    options: {
      scales: {
        y: {
          beginAtZero: true,
        },
      },
    },
  });
</script>
